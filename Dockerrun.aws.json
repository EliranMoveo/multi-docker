{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"eliranazulay/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"eliranazulay/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"eliranazulay/multi-worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"eliranazulay/multi-nginx",
            "essential":true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"]
        }
    ]
}